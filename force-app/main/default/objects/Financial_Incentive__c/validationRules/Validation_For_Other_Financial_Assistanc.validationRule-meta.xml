<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validation_For_Other_Financial_Assistanc</fullName>
    <active>true</active>
    <description>This validation rule will make Other Financial Assistance Detail field required if the Any Financial Assistance Received is Yes</description>
    <errorConditionFormula>AND(ISBLANK(Other_Financial_Assistance_Detail__c), OR(TEXT(Any_Financial_Assistance_Received__c)=&#39;Yes&#39;))</errorConditionFormula>
    <errorDisplayField>Other_Financial_Assistance_Detail__c</errorDisplayField>
    <errorMessage>Required Field</errorMessage>
</ValidationRule>
