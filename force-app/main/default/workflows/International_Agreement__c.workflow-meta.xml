<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Agreement_Owner_Notification_Email_Before_120_Days</fullName>
        <ccEmails>IAP@toronto.ca</ccEmails>
        <ccEmails>bizconnect@toronto.ca</ccEmails>
        <description>Agreement Owner Notification Email - Before 120 Days</description>
        <protected>false</protected>
        <recipients>
            <field>Agreement_Owner__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>Interaction_Management_Templates/Agreement_Owner_Notification_Email</template>
    </alerts>
    <alerts>
        <fullName>Agreement_Owner_Notification_Email_Before_200_Days</fullName>
        <ccEmails>IAP@toronto.ca</ccEmails>
        <ccEmails>bizconnect@toronto.ca</ccEmails>
        <description>Agreement Owner Notification Email - Before 200 Days</description>
        <protected>false</protected>
        <recipients>
            <field>Agreement_Owner__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>Interaction_Management_Templates/Agreement_Owner_Notification_Email</template>
    </alerts>
    <alerts>
        <fullName>Agreement_Owner_Notification_Email_Before_60_Days</fullName>
        <ccEmails>IAP@toronto.ca</ccEmails>
        <ccEmails>bizconnect@toronto.ca</ccEmails>
        <description>Agreement Owner Notification Email - Before 60 Days</description>
        <protected>false</protected>
        <recipients>
            <field>Agreement_Owner__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>Interaction_Management_Templates/Agreement_Owner_Notification_Email</template>
    </alerts>
    <alerts>
        <fullName>International_Agreement_Status_Expired_Notification</fullName>
        <ccEmails>IAP@toronto.ca</ccEmails>
        <ccEmails>bizconnect@toronto.ca</ccEmails>
        <description>International Agreement Status Expired Notification</description>
        <protected>false</protected>
        <recipients>
            <field>Agreement_Owner__c</field>
            <type>userLookup</type>
        </recipients>
        <senderType>DefaultWorkflowUser</senderType>
        <template>Financial_Incentive_Templates/Agreement_Owner_Expired_Notification_Email</template>
    </alerts>
    <fieldUpdates>
        <fullName>International_Agreement_Status_Expired</fullName>
        <field>Status__c</field>
        <literalValue>Expired</literalValue>
        <name>International Agreement Status Expired</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
    </fieldUpdates>
    <rules>
        <fullName>Agreement Expiration Notification to Owner</fullName>
        <active>true</active>
        <criteriaItems>
            <field>International_Agreement__c.Agreement_Signed_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>International_Agreement__c.Agreement_Term__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>This Workflow rule will trigger an email notification to Agreement Owner 60, 120 and 200 days before Agreement End Date</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Agreement_Owner_Notification_Email_Before_200_Days</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>International_Agreement__c.AgreementEndDate__c</offsetFromField>
            <timeLength>-200</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>Agreement_Owner_Notification_Email_Before_120_Days</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>International_Agreement__c.AgreementEndDate__c</offsetFromField>
            <timeLength>-120</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>Agreement_Owner_Notification_Email_Before_60_Days</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>International_Agreement__c.AgreementEndDate__c</offsetFromField>
            <timeLength>-60</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>International_Agreement_Status_Expired_Notification</name>
                <type>Alert</type>
            </actions>
            <actions>
                <name>International_Agreement_Status_Expired</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>International_Agreement__c.AgreementEndDate__c</offsetFromField>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
</Workflow>
