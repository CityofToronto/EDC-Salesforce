    <rules>
        <fullName>ES_SC_Small_MonthlyReport</fullName>
        <active>true</active>
        <description>Monthly email to get current training from clients.</description>
        <formula>AND(ISPICKVAL(Application_Stream__c ,  &quot;Starter Company - General&quot;),
AND(!ISBLANK(Phase_1_Start_Date__c), OR(ISBLANK(Date_of_Completing_Program__c), Date_of_Completing_Program__c&gt;Today())))</formula>
