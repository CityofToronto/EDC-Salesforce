            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Starter_Company_Clients__c.CreatedDate</field>
            <operation>greaterThan</operation>
            <value>12/1/2014</value>
        </criteriaItems>
        <criteriaItems>
            <field>Starter_Company_Clients__c.Application_Stream__c</field>
            <operation>equals</operation>
            <value>Starter Company - General</value>
        </criteriaItems>
        <description>Sends email to ET staff to notify of application submitted, creates associated tasks and notifies client.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
