    <rules>
        <fullName>ES_SC_Small-Phase1_Rejected</fullName>
        <actions>
            <name>SC_SmallBiz_RejectionPhase1</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Starter_Company_Clients__c.Phase_1_Application_Approved__c</field>
            <operation>equals</operation>
            <value>No</value>
        </criteriaItems>
        <criteriaItems>
            <field>Starter_Company_Clients__c.Application_Stream__c</field>
            <operation>equals</operation>
            <value>Starter Company - General</value>
        </criteriaItems>
        <description>Email to SC applicants to let them know they were not accepted into the program.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
