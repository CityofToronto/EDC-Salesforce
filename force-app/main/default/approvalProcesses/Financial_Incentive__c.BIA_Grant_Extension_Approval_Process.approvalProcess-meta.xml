<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>BIA_Admin</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>BIA_Coordinator</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account__c</field>
        <field>Contact__c</field>
        <field>RecordType</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>BIA_Application_Extension_Approval_Email_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>BIA_Grant_Status_Extension_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <description>This step will be applicable to all BIA Grants application submitted for Application Extension Approval</description>
        <label>Application Extension BIA Officer Manager Approval</label>
        <name>Application_Extension_BIA_Officer_Manager_Approval</name>
        <rejectionActions>
            <action>
                <name>BIA_Grant_Extension_Rejection_Email_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>BIA_Grant_Status_Extension_Declined</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This Approval Process is only Applicable to BIA Accounts and its related Grant Applications that has been submitted for extension</description>
    <emailTemplate>Financial_Incentive_Templates/BIA_Application_Extension_Approval_Email_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Financial_Incentive__c.RecordType</field>
            <operation>equals</operation>
            <value>BIA Commercial - Industrial Facade and Property Improvement,BIA Innovation Fund,BIA Streetscape Master Plan Funding,BIA Outside Mural and Street Art</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Incentive__c.Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Incentive__c.Do_you_need_extension__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Incentive__c.Amount_Approved__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Incentive__c.Application_Extension_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Update_Pending_Extension</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>BIA Grant Extension Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <recallActions>
        <action>
            <name>Status_Update_Withdrawn</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
