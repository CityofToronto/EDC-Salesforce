<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>BRE_Admin</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>BRE_EDO</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>BRE_International</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>BRE_Supervisor</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>File__c</field>
        <field>Account__c</field>
        <field>Contact__c</field>
        <field>Estimated_Construction_Cost__c</field>
        <field>Status__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Status_Update_Approved_by_City_Council</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Record_Submitter__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Financial_Incentive__c.Estimated_Construction_Cost__c</field>
                <operation>greaterThan</operation>
                <value>149999999</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>City Council Approval Step</label>
        <name>City_Council_Approval_Step</name>
        <rejectionActions>
            <action>
                <name>Update_Status_Declined</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>IMIT_Application_GM_Approved_Email_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Status_update_after_GM_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>mwillia5@toronto.ca</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Financial_Incentive__c.Estimated_Construction_Cost__c</field>
                <operation>lessThan</operation>
                <value>150000000</value>
            </criteriaItems>
        </entryCriteria>
        <label>EDC GM Approval Step</label>
        <name>EDC_GM_Approval_Step</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>IMIT_Rejection_Email_Notification</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Status_Declined</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This Approval Process is only Applicable to IMIT Applications.</description>
    <emailTemplate>Financial_Incentive_Templates/IMIT_Approval_Email_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 AND 2 AND 5 AND 6) OR (1 AND 3 AND 4 AND 5 AND 6)</booleanFilter>
        <criteriaItems>
            <field>Financial_Incentive__c.RecordType</field>
            <operation>equals</operation>
            <value>IMIT</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Incentive__c.Status__c</field>
            <operation>equals</operation>
            <value>Draft,In Review</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Incentive__c.Status__c</field>
            <operation>equals</operation>
            <value>Declined</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Incentive__c.Rejection_Reason__c</field>
            <operation>equals</operation>
            <value>More Information Required</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Incentive__c.No_Conflict_of_Interest_IMIT_Admin__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
        <criteriaItems>
            <field>Financial_Incentive__c.Has_No_Conflict_Doc_Uploaded_IMIT_Admin__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Status_Update_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>IMIT Approval Process</label>
    <recallActions>
        <action>
            <name>Status_Update_Withdrawn</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
